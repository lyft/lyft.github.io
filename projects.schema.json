{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "projects": {
            "type": "array",
            "items": {
                "type": "object",
                "description": "A Lyft Open Source project",
                "required": [
                    "name",
                    "description",
                    "languages",
                    "source",
                    "website",
                    "categories"
                ],
                "properties": {
                    "name": {
                        "description": "Short name of the project",
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "website": {
                        "type": "string"
                    },
                    "source": {
                        "type": "string"
                    },
                    "languages": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string"
                        }
                    },
                    "categories": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
